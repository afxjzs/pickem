# Apache .htaccess for Next.js Reverse Proxy on Bluehost
# Place this in your public_html/pickem directory (or subdomain root)

<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /
	
	# Proxy all requests to Next.js server on port 3000
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ http://localhost:3000/$1 [P,L]
</IfModule>

# Optional: Force HTTPS
<IfModule mod_rewrite.c>
	RewriteCond %{HTTPS} off
	RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>



